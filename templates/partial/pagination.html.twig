
{% if pageCount > 1 %}
        <div class="Pagination">
            <div class="Pagination-ins">

                {% if previous is defined %}
                <a class="Pagination-element Pagination-element_prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
                    <img src="{{ asset('images/icons/prevPagination.svg')}}" alt="prevPagination.svg"></a>
                {% endif %}

                {% for page in pagesInRange %}
                    {% if page != current %}
                <a class="Pagination-element" href="{{ path(route, query|merge({(pageParameterName): page})) }}">
                        <span class="Pagination-text">
                  {{ page }}
                </span>
                </a>
                    {% else %}
                       <a class="Pagination-element Pagination-element_current">
                        <span class="Pagination-text">{{ page }}</span>
                       </a>
                    {% endif %}
                {% endfor %}

                {% if next is defined %}
                <a class="Pagination-element Pagination-element_prev" href="{{ path(route, query|merge({(pageParameterName): next})) }}"><img src="{{ asset('images/icons/nextPagination.svg')}}" alt="nextPagination.svg"></a>
                {% endif %}
            </div>
        </div>
{% endif %}