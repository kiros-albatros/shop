{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block mainContent %}
    {% include 'partial/header-line.html.twig' with {'title': 'Авторизация', 'parent': 'Главная'} %}
    <div class="Section">
        <div class="wrap">
            <form method="post" class="form Authorization">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Вы вошли как {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Выйти</a>
                    </div>
                {% endif %}
                <div class="row">
                    <div class="row-block">
                        <div class="form-group">
                            <label for="inputEmail" class="form-label">Почта</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                   class="form-input" autocomplete="email" required autofocus>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword" class="form-label">Пароль</label>
                            <input type="password" name="password" id="inputPassword" class="form-input"
                                   autocomplete="current-password" required>
                        </div>
                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                >

                                {#
                                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                See https://symfony.com/doc/current/security/remember_me.html

                                <div class="checkbox mb-3">
                                    <label>
                                        <input type="checkbox" name="_remember_me"> Remember me
                                    </label>
                                </div>
                                #}
                                <div class="form-group" style="margin-top: 25px; margin-bottom: 25px">
                                    <button class="btn btn_primary" type="submit">
                                        Войти
                                    </button>
                                </div>
                        <a href="{{ path('app_forgot_password_request') }}">Забыли пароль?</a>
                            </div>
                        </div>

            </form>
        </div>
    </div>

{% endblock %}
