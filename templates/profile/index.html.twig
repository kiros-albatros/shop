{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block mainContent %}
    {% include 'partial/header-line.html.twig' with {'title': 'Профиль', 'parent': 'Главная'} %}
    <div class="Section Section_column Section_columnLeft">
        <div class="wrap">
            <div class="Section-column">
                <div class="Section-columnSection">
                    <header class="Section-header">
                        <strong class="Section-title">Навигация</strong>
                    </header>
                    <div class="Section-columnContent">
                        <div class="NavigateProfile">
                            <ul class="menu menu_vt">
                                <li class="menu-item_ACTIVE menu-item"><a class="menu-link" href="{{ path('app_profile_index') }}">Личный кабинет</a></li>
                                <li class="menu-item"><a class="menu-link" href="{{ path('app_profile_edit') }}">Профиль</a></li>
                                <li class="menu-item"><a class="menu-link" href="historyorder.html">История заказов</a></li>
                                <li class="menu-item"><a class="menu-link" href="historyview.html">История просмотра</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="Section-content">
                <div class="Account">
                    <div class="Account-group">
                        <div class="Account-column">
                            <div class="Account-avatar"><img src="{{ asset ( app.user.avatar|default('images/content/home/card.jpg') )}}" alt="card.jpg">
                            </div>
                        </div>
                        <div class="Account-column">
                            <div class="Account-name">{{ app.user.name|default(app.user.email) }}
                            </div><a class="Account-editLink" href="{{ path('app_profile_edit') }}">Редактировать профиль</a>
                        </div>
                    </div>
                    <div class="Account-group">
                        <div class="Account-column Account-column_full">
                            <div class="Order Order_anons">
                                <div class="Order-personal">
                                    <div class="row">
                                        <div class="row-block"><a class="Order-title" href="oneorder.html">Заказ <span class="Order-numberOrder">№200</span> от <span class="Order-dateOrder">21.07.2020</span></a>
                                            <div class="Account-editLink"><a href="historyorder.html">История заказов</a>
                                            </div>
                                        </div>
                                        <div class="row-block">
                                            <div class="Order-info Order-info_delivery">
                                                <div class="Order-infoType">Тип доставки:
                                                </div>
                                                <div class="Order-infoContent">Обычная доставка
                                                </div>
                                            </div>
                                            <div class="Order-info Order-info_pay">
                                                <div class="Order-infoType">Оплата:
                                                </div>
                                                <div class="Order-infoContent">Онлайн картой
                                                </div>
                                            </div>
                                            <div class="Order-info">
                                                <div class="Order-infoType">Общая стоимость:
                                                </div>
                                                <div class="Order-infoContent">200.99$
                                                </div>
                                            </div>
                                            <div class="Order-info Order-info_status">
                                                <div class="Order-infoType">Статус:
                                                </div>
                                                <div class="Order-infoContent">Не оплачен
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="Account-group">
                        <div class="Account-column Account-column_full">
                            <header class="Section-header">
                                <h2 class="Section-title">История просмотров
                                </h2>
                            </header>
                            <div class="Cards Cards_account">
                                {% for i in 0..2 %}
                                    <div class="Card"><a class="Card-picture" href="#"><img src="{{ asset ('images/content/home/card.jpg') }}" alt="card.jpg"></a>
                                        <div class="Card-content">
                                            <strong class="Card-title"><a href="#">Corsair Carbide Series Arctic White Steel</a>
                                            </strong>
                                            <div class="Card-description">
                                                <div class="Card-cost"><span class="Card-priceOld">$115.00</span><span class="Card-price">$85.00</span>
                                                </div>
                                                <div class="Card-category">Games / xbox
                                                </div>
                                                <div class="Card-hover"><a class="Card-btn" href="#"><img src="{{ asset ('images/icons/card/bookmark.svg')}}" alt="bookmark.svg"></a>
                                                    <a class="Card-btn" href="#"><img src="{{ asset ('images/icons/card/cart.svg')}}" alt="cart.svg"></a>
                                                    <a class="Card-btn" href="#"><img src="{{ asset ('images/icons/card/change.svg')}}" alt="change.svg"></a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="Card-sale">-60%
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                            <div class="Account-editLink Account-editLink_view"><a href="historyview.html">Перейти на полный список</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}