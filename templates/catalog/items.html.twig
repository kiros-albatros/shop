<div class="Section-content">
    <div class="Sort">
        <div class="Sort-title">Сортировать по:
        </div>
        <div class="Sort-variants">
            <a class="Sort-sortBy Sort-sortBy_dec" href="#">Популярности</a>
            <a class="Sort-sortBy" href="#">Цене</a>
            <a class="Sort-sortBy" href="#">Отзывам</a>
            <a class="Sort-sortBy Sort-sortBy_inc" href="#">Новизне</a>
        </div>
    </div>
    {% if pagination %}
        <div class="Cards">


            {% for product in pagination %}
                <div class="Card">
                    <a class="Card-picture" href="#"><img src="{{ asset('images/content/home/card.jpg') }}"
                                                          alt="card.jpg"></a>
                    <div class="Card-content">
                        <strong class="Card-title">
                            <a href="{{ path('app_product_show', {'slug': product.id}) }}">{{ product.name }}</a>
                        </strong>
                        <div class="Card-description">
                            <div class="Card-cost">
                                <span class="Card-price">$ {{ product.price }}</span>
                            </div>
                            <div class="Card-category">Games / xbox
                            </div>
                            <div class="Card-hover">
                                <a class="Card-btn" href="#"><img src="{{ asset('images/icons/card/bookmark.svg') }}"
                                                                  alt="bookmark.svg"></a>
                                <a class="Card-btn" href="#"><img src="{{ asset('images/icons/card/cart.svg') }}"
                                                                  alt="cart.svg"></a>
                                <a class="Card-btn" href="#"><img src="{{ asset('images/icons/card/change.svg') }}"
                                                                  alt="change.svg"></a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        {{ knp_pagination_render(pagination, './partial/pagination.html.twig') }}
    {% endif %}
</div>
</div>
</div>
