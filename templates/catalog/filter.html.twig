<div class="Section-column">
	<div class="Section-columnSection">
		<header class="Section-header">
			<strong class="Section-title">Фильтр</strong>
		</header>
		<div class="Section-columnContent">
			<form class="form" method="get" action="{{ path('app_catalog') }}">
				<div class="form-group">
					<div class="range Section-columnRange">
						<input class="range-line" id="price" name="price" type="text" data-type="double" data-min="1" data-max="2000" data-from="1" data-to="2000"/>
						<div class="range-price">Цена:&#32;
							<div class="rangePrice"></div>
						</div>
					</div>
				</div>
				<div class="form-group">
					<input class="form-input form-input_full" id="title" name="title" type="text" placeholder="Название" value="{{ app.request.get('title')|default("") }}"/>
				</div>
				<div class="form-group">
					<select class="form-select" name="seller">
						<option selected="selected" disabled="disabled">Продавец</option>
{#						<option value="all">Все</option>#}
						{% if sellers %}
							{% for seller in sellers %}
								<option value="{{ seller.id }}">{{ seller.name }}</option>
							{% endfor %}
						{% endif %}
					</select>
				</div>
				<div class="form-group">
					<div class="d-flex flex-nowrap">
						<a href="{{ path('app_catalog') }}" class="btn btn_square btn_dark btn_narrow">Сбросить</a>
						<button type="submit" class="btn btn_square btn_dark btn_narrow">Применить</button>
{#						<a class="btn btn_square btn_dark btn_narrow" href="#">Применить</a>#}
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
