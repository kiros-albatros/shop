{% extends 'base.html.twig' %}

{% block mainContent %}

    <div class="Middle Middle_top">
        {% include 'partial/header-line.html.twig' with {'title': 'Каталог', 'parent': 'Главная'} %}

        <div class="Section Section_column Section_columnLeft">
            <div class="wrap">

                <div class="Section-content">
                    {% if products %}
                        <div class="Cards">


                            {% for product in products %}
                                <div class="Card">
                                    <a class="Card-picture" href="#"><img src="{{ asset('images/content/home/card.jpg') }}"
                                                                          alt="card.jpg"></a>
                                    <div class="Card-content">
                                        <strong class="Card-title">
                                            <a href="{{ path('app_product_show', {'slug': product.id}) }}">{{ product.name }}</a>
                                        </strong>
                                        <div class="Card-description">
                                            <div class="Card-cost">
                                                <span class="Card-price">$ {{ product.price }}</span>
                                            </div>
                                            <div class="Card-category">{{ product.category.name }}
                                            </div>
                                            <div class="Card-hover">
                                                <a class="Card-btn" href="#"><img src="{{ asset('images/icons/card/bookmark.svg') }}"
                                                                                  alt="bookmark.svg"></a>
                                                <a class="Card-btn" href="#"><img src="{{ asset('images/icons/card/cart.svg') }}"
                                                                                  alt="cart.svg"></a>
                                                <a class="Card-btn" href="#"><img src="{{ asset('images/icons/card/change.svg') }}"
                                                                                  alt="change.svg"></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

            </div>
        </div>
    </div>

{% endblock %}